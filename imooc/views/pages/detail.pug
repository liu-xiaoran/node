extends ../layout

block content
    .container
        .row
            .col-md-7
                video(width="720", height="600", controls)
                    source(src= movie.video type="video/mp4")
                .col-md-5
                    dl.dl-horizontal
                        dt 电影名字
                        dd= movie.title
                        dt 导演
                        dd= movie.doctor
                        dt 国家
                        dd= movie.country
                        dt 语言
                        dd= movie.language
                        dt 上映年份
                        dt 简介
                        dd= movie.year
                        dd= movie.summary
